{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Install Market-Time",
      "type": "shell",
      "command": "make install",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "detail": "Initial setup - Create .env, build images, start containers"
    },
    {
      "label": "Docker: Start Containers",
      "type": "shell",
      "command": "make start",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Start all Market-Time containers"
    },
    {
      "label": "Docker: Stop Containers",
      "type": "shell",
      "command": "make stop",
      "group": "build",
